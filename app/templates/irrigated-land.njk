{% extends '.layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "./components/macro.njk" import crumbToken, sideBar %}
{% block pageTitle %}
  {{siteTitle}} - Irrigated land  
{% endblock %}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="./irrigated-land" autocomplete="off" novalidate="novalidate">
        {{ crumbToken(crumb)}}
        {{ govukInput(currentInput) }}
        {{ govukInput(targetInput) }}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
    <div class="govuk-grid-column-one-third  govuk-body">
    {{ sideBar("Funding priorities","RPA wants to fund projects that:",
    [
      "improve productivity"
    ]) }}
    </div>
  </div>
{% endblock %}