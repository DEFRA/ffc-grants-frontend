{% extends '.layout.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "./components/macro.njk" import crumbToken, sideBar, conditionalButtons %}
{% block pageTitle %}
  {{siteTitle}} - Productivity
{% endblock %}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink,
	  attributes: {id: 'linkBack'}
  }) }}
  {% if errorText %}
    {{govukErrorSummary ({
  "titleText": "There is a problem",
  "errorList": [
    {
      "text": errorText,
      "href": "#productivity"
    }
  ]
}) }}
  {% endif %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="{{ formActionPage }}" autocomplete="off" novalidate="novalidate">
        {{ crumbToken(crumb)}}
        {{ govukCheckboxes(checkboxes) }}
        {{ conditionalButtons(hasScore, 'score') }}
      </form>
    </div>
    {{ sideBar("Funding priorities","RPA wants to fund projects that:",
    [
      "improve productivity"
    ]) }}
  </div>
{% endblock %}