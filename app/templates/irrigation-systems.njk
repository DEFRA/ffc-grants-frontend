{% extends '.layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: "Check if you can apply for a water resource management grant",
    serviceUrl: "/"
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
  {% if errorText %}
    {{govukErrorSummary ({
  "titleText": "There is a problem",
  "errorList": [
    {
      "text": errorText,
      "href": "#irrigationCurrent"
    }
  ]
}) }}
  {% endif %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="/irrigation-systems" novalidate="novalidate">
        {{ govukCheckboxes(irrigationCurrent) }}
        {{ govukCheckboxes(irrigationPlanned) }}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}