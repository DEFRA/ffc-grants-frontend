{% extends '.layout.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: "Check if you can apply for a water resource management grant",
    serviceUrl: "/"
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">You may be able to apply for a grant from this scheme</h1>
      <p class="govuk-body">
        {{ messageContent | safe}}
      </p>
      {{ govukButton({
          text: "Continue",
          onclick: "window.location.href='http://localhost:3000/tenancy-length'"
        }) }}
    </div>
  </div>
{% endblock %}