{% extends '.layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "./components/macro.njk" import crumbToken, sideBar %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% block pageTitle %}
  Farming type - {{siteTitle}}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink,
	  attributes: {id: 'linkBack'}
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="{{ formActionPage }}" autocomplete="off" novalidate>
        {{ crumbToken(crumb)}}
        {{ govukRadios(radios) }}
        {{ govukButton({
          text: "Continue",
          attributes: {id: "btnContinue"}
        }) }}
      </form>
    </div>
    {{ sideBar("Eligibility","This grant is for:",
    [
      "arable and horticultural farming businesses supplying the food industry",
      "nurseries growing ornamentals",
      "forestry nurseries"
    ]) }}
  </div>
{% endblock %}
