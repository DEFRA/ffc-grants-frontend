{% extends '.layout.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: "Apply for a large grant",
    serviceUrl: "/"
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Email sent</h1>
    <p class="govuk-body">An email has been sent to {{ emailAddress }} with reference {{ progressReference }}</p>
    <p class="govuk-body"><a href={{ magicLink }}>Check details link</a></p>
    <p class="govuk-body"><a href={{ emailLink }}>Email link</a></p>
  </div>
</div>
{% endblock %}
