{% extends '.layout.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "./components/macro.njk" import crumbToken, sideBar, conditionalButtons%}

{% block pageTitle %}
  {% if errorList %}
    Error:
  {% endif %}
  Will your irrigation system change? -
  {{siteTitle}}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink,
	  attributes: {id: 'linkBack'}
  }) }}

  {% if errorList %}
    {{govukErrorSummary ({
  "titleText": "There is a problem",
  "errorList": errorList
}) }}
  {% endif %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{pageTitle}}</h1>

      <form method="POST" action="{{ formActionPage }}" autocomplete="off" novalidate="novalidate">
        {{ crumbToken(crumb)}}

        {% if currentlyIrrigating %}
          {{ govukCheckboxes(irrigationCurrent) }}
        {% else %}
          {{ govukInput(mockCheckbox) }}
        {% endif %}

        {{ govukCheckboxes(irrigationPlanned) }}
        {{ conditionalButtons(hasScore) }}
      </form>
    </div>

    {% if currentlyIrrigating %}
          {{ 
            sideBar(
              "Funding priorities","RPA wants to fund projects that:",
              [
                "improve the environment","improve water sustainability"
              ], 'h3'
            )
          }}

        {% else %}
          {{ 
            sideBar(
              "Funding priorities","RPA wants to fund projects that move from less efficient irrigation systems to more efficient ones.\n
              For example, moving from rain gun to trickle.",[]
            )
          }}

        {% endif %}
  </div>
{% endblock %}
